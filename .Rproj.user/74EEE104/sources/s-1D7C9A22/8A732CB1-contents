language: r
cache: packages
pandoc_version: 1.19.2.1
env:
  global:
  - R_PKG="$(basename $TRAVIS_REPO_SLUG)" R_KNITR_OPTIONS="knitr.chunk.tidy=TRUE"
    PATH=$HOME/bin:$PATH
  - secure: 
r_github_packages:
- rstudio/bookdown
install:
- Rscript -e "if (!require('pacman')) install.packages('pacman')"
- Rscript -e "pacman::p_load(data.table, mosaic, mdsr, mosaicData, RColorBrewer)"
- Rscript -e "pacman::p_load(bookdown)"
- Rscript -e "pacman::p_load(formatR)"
- Rscript -e "pacman::p_load(tidyverse)"
- Rscript -e "pacman::p_load(kableExtra)"
before_script:
- chmod +x ./_build.sh
- chmod +x ./_deploy.sh
script:
- "./_build.sh"
- "./_deploy.sh"
