DT_lexis[, Cause:=multinomOutcome]


p <- lapply(DT_lexis[,levels(multinomOutcome)][-1], 
            function(i) calc_rate(DT_lexis, i , split = "time", 
                                  time.breaks = c(cal.yr(dmy("01-04-2003")),
                                                  cal.yr(dmy("31-12-2012")),
                                                  cal.yr(dmy("31-12-2017"))),
                                  per = 10^3
            )
)


